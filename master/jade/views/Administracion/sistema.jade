h3
    .pull-right
        .btn-group(dropdown='', is-open='language.listIsOpen')
            button.btn.btn-default(type='button', dropdown-toggle="")
                | {{language.selected}}
                span.caret
            ul.dropdown-menu.dropdown-menu-right.animated.fadeInUpShort(role='menu')
                li(ng-repeat='(localeId, langName) in language.available')
                    a(ng-click='language.set(localeId, $event)') {{langName}}
    | {{'administracion.sistema.titulo' | translate}}
    small {{'administracion.sistema.descripcionTitulo' | translate}}
.panel.panel-default
  .panel-body
    fieldset
      .pull-right
        .form-group
          .col-lg-offset-2.col-lg-10
            button.btn.btn-primary(type='submit') {{'administracion.sistema.botones.agregar' | translate}}
    fieldset
     .col-lg-10
        .panel.panel-default
          .panel-heading
           | {{'home.keyUser.tabla.titulo' | translate}}
           .table-responsive
             table#table-ext-3.table.table-striped.table-bordered.table-hover
              thead
                  tr
                      th {{'administracion.sistema.tabla.id' | translate}}
                      th {{'administracion.sistema.tabla.nombre' | translate}}
                      th {{'administracion.sistema.tabla.sla' | translate}}
                      th {{'administracion.sistema.tabla.activo' | translate}}
                      th {{'administracion.sistema.tabla.acciones' | translate}}
              tbody
                  tr(ng-repeat='item in data | filter:miFiltro')
                    td {{item.TipoIncidenteId}}
                    td  {{item.Nombre}}
                    td  {{item.sla}}
                    td {{item.EsActivo}}
                    td
                      a.btn.btn-labeled.btn-info( href='/#/app/administracion/editarSistema/{{item.TipoIncidenteId}}')
                        | {{'administracion.sistema.tabla.editar' | translate}}

