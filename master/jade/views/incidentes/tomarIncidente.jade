h3 
  .pull-right
    .btn-group(dropdown='', is-open='language.listIsOpen')
      button.btn.btn-default(type='button', dropdown-toggle="")
        | {{language.selected}}
        span.caret
      ul.dropdown-menu.dropdown-menu-right.animated.fadeInUpShort(role='menu')
        li(ng-repeat='(localeId, langName) in language.available')
          a(ng-click='language.set(localeId, $event)') {{langName}}
  | {{'incidente.tomarIncidente.titulo' | translate}}
  small {{'incidente.tomarIncidente.tituloDescripcion' | translate}}
.panel
  .panel-body
    button(type="button",ng-click="tomarIncidente(incidente.idIncidente)").pull-right.btn.btn-primary.btn-sm {{'incidente.tomarIncidente.botones.tomarIncidente' | translate}}
    h3.mt0 {{'incidente.tomarIncidente.campos.id' | translate}} {{incidente.idIncidente}}
    hr
    .row.mb-lg
      .col-lg-8.col-xs-10.br.pv
        .row
          .col-md-8
            h4 {{'incidente.tomarIncidente.campos.nombre' | translate}} 
            address
            | {{incidente.nombre}}
          .col-md-2
            h4  {{'incidente.editarConsultor.campos.sla' | translate}} 
            span.label.label-purple {{incidente.sla}} 
          .col-md-2
            h4  {{'incidente.editarConsultor.campos.slaTranscurrido' | translate}} 
            span.label.label-purple {{incidente.tiempoTranscurrido}} 
        .row
          .col-md-10
            h4  {{'incidente.tomarIncidente.campos.descripcion' | translate}} 
            address
            | {{incidente.descripcion}}
        .row
          .col-md-3
            h4  {{'incidente.tomarIncidente.campos.fechaCreacion' | translate}} 
            address
            | {{incidente.fechaCreacion | date:'MM/dd/yyyy h:mma'}}
          .col-md-3
            h4  {{'incidente.tomarIncidente.campos.sistema' | translate}} 
            address
            | {{incidente.tipoIncidente.Nombre}}
          .col-md-3
            h4  {{'incidente.tomarIncidente.campos.modulo' | translate}} 
            address
            | {{incidente.subtipoincidente.Nombre}}
        .row
          .col-md-6
            h4  {{'incidente.tomarIncidente.campos.estado' | translate}} 
            address
            | {{incidente.estado.Nombre}}
          
        .row   
          .col-md-10
            h4  {{'incidente.tomarIncidente.campos.tituloArchivo' | translate}}
            address
              li.list-inline(ng-repeat='item in incidente.adjuntos')
               a(href='api/adjunto/obtenerarchivo/{{item.AdjuntoId}}'){{item.Nombre}}
      .col-lg-4.col-xs-4.br.pv
            .row
              .p-xl
                a.list-group-item(href='#')
                  .media-box
                    .pull-left
                      img.media-box-object.img-circle.thumb64(src="{{incidente.ku.foto}}", alt="Image")
                    .media-box-body.clearfix
                      small.pull-right 
                      strong.media-box-heading.text-primary {{'incidente.ver.campos.keyUser' | translate}} 
                        span.circle.circle-success.circle-lg.text-left
                    | {{incidente.ku.nombre}}
                  p.mb-sm: small {{incidente.ku.empresa}}
            