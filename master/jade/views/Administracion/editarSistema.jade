h3
    .pull-right
        .btn-group(dropdown='', is-open='language.listIsOpen')
            button.btn.btn-default(type='button', dropdown-toggle="")
                | {{language.selected}}
                span.caret
            ul.dropdown-menu.dropdown-menu-right.animated.fadeInUpShort(role='menu')
                li(ng-repeat='(localeId, langName) in language.available')
                    a(ng-click='language.set(localeId, $event)') {{langName}}
    | {{'administracion.sistema.titulo' | translate}}
    small {{'administracion.sistema.descripcionTitulo' | translate}}
.panel.panel-default
    .panel-body
        fieldset
    .panel-footer
        fieldset
            .pull-right
                .form-group
                    .col-lg-offset-2.col-lg-10
                        button.btn.btn-primary(type='submit') {{'administracion.usuarios.botones.actualizar' | translate}}
